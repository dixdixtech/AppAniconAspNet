<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title - ANICON 2022</title>
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/Content/Images/Logo.svg">
    <link rel="stylesheet" href="~/Content/fontawesome.min.css" />
    <link rel="stylesheet" href="~/Content/all.min.css" />
    <link rel="stylesheet" href="~/slick/slick-theme.css" />
</head>
<body>
    <nav class="nav" style="padding-right:20px">
        <div class="menu-icon">
            <span class="fas fa-bars"></span>
        </div>
        <div class="logo" style="font-family: Limelig">
            ANICON
        </div>
        <div>
            <ul class="nav-items">
                <li><a href='@Url.Action("Index", "Home")'>Página Inicial</a></li>
                @*<li><a href='@Url.Action("Perfil", "Home")'>Perfil</a></li>*@
                @if (User.Identity.IsAuthenticated)
                {
                    @*<li><a href='@Url.Action("DetalhesProduto", "Produto")'>Detalhes Produto</a></li>*@
                    <li><a href='@Url.Action("CadProdAnicon", "Produto")'>Cadastrar Produto</a></li>
                    <li>@Html.ActionLink("Alterar Senha", "Alterarsenha", "Autenticacao") </li>
                    <li>@Html.ActionLink(@User.Identity.Name, "", "")</li>
                    <li>@Html.ActionLink("Sair", "Logout", "Autenticacao")</li>
                }
                else
                {
                    <li><a href='@Url.Action("Insert", "Autenticacao")'>Cadastrar</a></li>
                    <li><a href='@Url.Action("Login", "Autenticacao")'>Login</a></li>
                }
            </ul>
        </div>
        <div class="search-icon">
            <span class="fas fa-search"></span>
        </div>
        <div class="cancel-icon">
            <span class="fas fa-times"></span>
        </div>
        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <input name="search" id="search" type="search" class="search-data" placeholder="Buscar produtos" required=required />
            <button type="submit" class="fas fa-search"></button>
        }
    </nav>
    @*ATUALIZADO*@
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="footer">
